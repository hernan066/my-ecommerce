{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["domain/src/*"],
      "@backend/*": ["apps/backend/src/*"],
      "@test/*": ["apps/backend/test/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["apps", "domain", "vitest.config.ts"]
}
